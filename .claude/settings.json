{
  "permissions": {
    "deny": [
      "Bash(sudo :*)",
      "Bash(rm :*)",
      "Bash(rm -rf :*)",
      "Bash(git push :*)",
      "Bash(git commit :*)",
      "Bash(git reset :*)",
      "Bash(git rebase :*)",
      "Bash(curl :*)",
      "Bash(wget :*)",
      "Bash(nc :*)",
      "Bash(npm uninstall :*)",
      "Bash(composer install :*)",
      "Bash(composer uninstall :*)",
      "Bash(composer remove :*)",
      "Bash(psql :*)",
      "Bash(mysql :*)",
      "Bash(aws :*)",
      "Read(.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(**/*key*)",
      "Write(**/secrets/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/deny-check.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
